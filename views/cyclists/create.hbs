<div class="row justify-content-center">
  <div class="col-12 col-md-6">
    
 {{#if errors}}
      <div class="alert alert-danger">
        {{#each errors as |error|}}
          <div>{{error}}</div>
        {{/each}}
      </div>
    {{/if}}

    <form action="/cyclists/create" method="post">
      <div class="input-group mb-1">
        <span class="input-group-text"><i class="fa fa-user fa-fw"></i></span>
        <input value="{{cyclist.name}}" type="text" name="name" class="form-control" placeholder="Company name...">
      </div>
    
      <div class="input-group mb-1">
        <span class="input-group-text"><i class="fa fa-envelope fa-fw"></i></span>
        <input value="{{cyclist.team}}" type="text" name="team" class="form-control" placeholder="Team">
      </div>
    
      <div class="input-group mb-2">
        <span class="input-group-text"><i class="fa fa-bicycle fa-fw"></i></span>
        <input value="{{cyclist.bike}}" type="text" name="bike" class="form-control" placeholder="Bike">
      </div>

      <div class="input-group mb-2">
        <span class="input-group-text"><i class="fa fa-trophy fa-fw"></i></span>
        <input value="{{cyclist.victories}}" type="number" name="victories" class="form-control" placeholder="Victories">
      </div>
    
      <div class="d-grid">
        <button class="btn btn-primary" type="submit">New Cyclist</button>
      </div>
    </form>
  </div>
</div>